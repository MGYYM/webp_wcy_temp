.list2 {
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.list2 .img {
  width: 100%;
  height: 100rpx;
}
.list2 .goods-info {
  padding: 16rpx;
  padding-top: 0rpx;
}
.list2 .goods-info .title {
  color: #333;
}
.list2 .goods-info .price {
  color: #FF3B30;
  font-weight: 800;
}
.list2 .goods-info .buy-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list2 .goods-info .buy-info .num {
  font-size: 24rpx;
  color: #999999;
}
